<div class="container pt-3 pb-5">
  <div class="row">
    <div class="col-md-3 pr-1">
      <%= render "users/user",user:@user %>
      <%= render "books/book",book:@book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
        <div>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@book.user.id) do %>
                    <%= image_tag @user.get_profile_image(100,100) %>
                    <%= @book.user.name %>
                  <% end %>
                  </a>
                </td>
                <td>
                  <%= link_to @book.title %>
                </td>
                <td><%= @book.body %></td>
                <td>コメント数: <%= @book.book_comments.count %></td>
                <td><%= render "favorites/favorite", book: @book %></td>
                <td>
                  <% if @book.user == current_user %>
                    <%= link_to "Edit",edit_book_path(@book),class:"btn btn-success" %>
                  <% end %>
                </td>
                <td>
                  <% if @book.user == current_user %>
                    <%= link_to "Destroy",book_path(@book),method: :delete,class:"btn btn-danger", data: {confirm: "本当に削除しますか？"} %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
                <%= render "book_comments/comment", book: @book, book_comment: @book_comment %>
        </div>
      </div>
    </div>
</div>